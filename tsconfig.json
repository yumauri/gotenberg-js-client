{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    // "lib": [], // there is problem with URL, when empty :( https://github.com/DefinitelyTyped/DefinitelyTyped/issues/34960
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "declaration": true,
    "baseUrl": "./src"
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.spec.ts"]
}
